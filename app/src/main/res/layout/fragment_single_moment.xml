<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.tourassistant.page_fragment.SingleMomentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backFromAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/com_facebook_close" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/add_imageS"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/add_btn"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"/>

            <EditText
                android:id="@+id/et_add_titleS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Set Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/et_add_descriptionS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Write Desctiption..."
                android:textSize="18sp"
                android:padding="10dp"/>



        </LinearLayout>
</android.support.v7.widget.CardView>


    </ScrollView>


</FrameLayout>
