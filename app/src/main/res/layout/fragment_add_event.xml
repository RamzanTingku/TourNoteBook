<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.tourassistant.page_fragment.AddEventFragment">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_margin="20dp"
      android:layout_height="wrap_content">
      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageButton
                  android:id="@+id/backFromAddEvent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@drawable/com_facebook_close" />

          </RelativeLayout>

          <EditText
              android:id="@+id/destinationEt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Destination"/>
          <EditText
              android:id="@+id/budgetEt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Budget"
              android:inputType="number"/>

          <EditText
              android:id="@+id/fromDateEt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="From Date"
              android:inputType="date"/>
          <EditText
              android:id="@+id/toDateET"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="To Date"
              android:inputType="date"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp">

</LinearLayout>

      </LinearLayout>
  </android.support.v7.widget.CardView>




</FrameLayout>
