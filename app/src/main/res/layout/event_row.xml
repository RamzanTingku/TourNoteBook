<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@drawable/expense_list_background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Tour to "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="right"
                android:padding="2dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:text="Event Name"
                android:id="@+id/eventNameRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="25dp"
                android:textStyle="bold"
                android:padding="2dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
        <TextView
            android:text="From Date"
            android:id="@+id/fromDateRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:text="To Date"
            android:id="@+id/toDateRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:text="Budget"
            android:id="@+id/budgetRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@android:color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="Explore by :"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@android:color/white"/>

            <Button
                android:text="Expense"
                android:textAllCaps="false"
                android:id="@+id/ExpenseShowBt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/btn_background"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content" />

            <Button
                android:text="Moments"
                android:textAllCaps="false"
                android:id="@+id/MomentShowBt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/btn_background"
                />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>